###############################################
# Archivio Dati Societari - Gruppo di Martino
# Copia questo file in .env e configura i valori
###############################################

# Application
APP_NAME="Archivio Dati Societari"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_LOCALE=it
APP_TIMEZONE=Europe/Rome

# Docker Ports
APP_PORT=8080
MAILHOG_UI_PORT=8025
MAILHOG_SMTP_PORT=1025

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=archivio_societario
DB_USERNAME=archivio_user
DB_PASSWORD=change_this_password
DB_ROOT_PASSWORD=change_this_root_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_CLIENT=phpredis

# Cache & Session
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# Queue
QUEUE_CONNECTION=redis

# Mail (Mailhog per sviluppo locale)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@gruppodimartino.it"
MAIL_FROM_NAME="Archivio Societario"

# Web Push (VAPID) - Genera con: php artisan webpush:generate
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@gruppodimartino.it

# File Upload
UPLOAD_MAX_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,zip,p7m

# Admin (password iniziale per utente admin)
ADMIN_DEFAULT_PASSWORD=Admin@2024!Secure

# Security
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_DECAY_MINUTES=1

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug
